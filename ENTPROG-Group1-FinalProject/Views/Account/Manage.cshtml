@model ManageAccountViewModel

@{
    ViewData["Title"] = "Manage Account";
}

<div class="container mt-5">
    <h2 class="mb-4">Manage Account</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Profile Information</h4>
        </div>
        <div class="card-body">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>

            <div class="mt-3">
                <a asp-action="EditProfile" class="btn btn-success">Edit Profile</a>
                <a asp-action="ChangePassword" class="btn btn-danger">Change Password</a>
            </div>
        </div>
    </div>

    <!-- Delete Account Button -->
    <div class="card">
        <div class="card-header">
            <h4>Delete Account</h4>
        </div>
        <div class="card-body">
            <p class="text-danger">Warning: This action cannot be undone. Your account will be permanently deleted.</p>
            <form id="deleteAccountForm" asp-action="DeleteAccount" method="post">
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete Account</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteAccountForm').submit();
                }
            })
        }
    </script>
}
