@model ProductVM

<h3>Add Product</h3>
<hr />


<form asp-controller="Product" asp-action="Add" method="post">
    <label asp-for="ProductName"></label>
    <input type="text" asp-for="ProductName" class="form-control" value="@Model.ProductName" />
    <span asp-validation-for="ProductName" class="text-danger"></span>
    <br />

    <label asp-for="ProductDescription"></label>
    <input type="text" asp-for="ProductDescription" class="form-control" value="@Model.ProductDescription" />
    <span asp-validation-for="ProductDescription" class="text-danger"></span>
    <br />

    <label asp-for="Price"></label>
    <input type="text" asp-for="Price" class="form-control" value="@Model.Price" />
    <span asp-validation-for="Price" class="text-danger"></span>
    <br />

    <label asp-for="Stock"></label>
    <input type="text" asp-for="Stock" class="form-control" value="@Model.Stock" />
    <span asp-validation-for="Stock" class="text-danger"></span>
    <br />

    <label asp-for="CategoryName"></label>
    <select asp-for="CategoryName">
        <option value="Fruits">Fruits</option>
        <option value="Vegetables">Vegetables</option>
        <option value="Rice & Grains">Rice & Grains</option>
        <option value="Dairy">Dairy</option>
        <option value="Meat">Meat</option>
        <option value="Fish & Seafood">Fish & Seafood</option>
    </select>


    <input type="submit" value="Add Product" class="btn-success" />
    <br />
    <br />
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
        Back
    </a>
</form>
