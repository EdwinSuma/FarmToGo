@model List<ProductVM>

@{
    ViewData["Title"] = "MyProducts";
}

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
    <i class="fas fa-caret-square-left"></i></> Back To Home Page
</a>

@if (Model.Count() < 1)
{
    <div class="alert alert-info">
        No Products  Found.
    </div>
}

else
{
    <table id="ProductTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Seller</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductVM obj in Model)
            {
                <tr>
                    <td>@obj.SellerId</td>
                    <td>@obj.ProductName</td>
                    <td>@obj.ProductDescription</td>
                    <td>@obj.Price</td>
                    <td>@obj.Stock</td>
                    <td>@obj.CategoryName</td>
                </tr>
            }
        </tbody>
    </table>
}
